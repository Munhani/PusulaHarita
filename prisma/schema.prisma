generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ContactInfo {
  id            Int      @id @default(autoincrement())
  address       String
  phone         String
  mobile        String
  email         String
  workingHours  WorkingHours?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model WorkingHours {
  id        Int         @id @default(autoincrement())
  weekdays  String
  saturday  String
  sunday    String
  contactInfo ContactInfo @relation(fields: [contactInfoId], references: [id])
  contactInfoId Int      @unique
}

model ContactForm {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}
